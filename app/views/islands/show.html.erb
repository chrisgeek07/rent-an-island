<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-sm-6 col-lg-6">

    <div class="d-flex justify-content-between align-items-center mb-4">

      <h1 class=""> <%= @island.name %> </h1>

      <div class='d-flex align-items-center '>
        <% if current_user.owner == true %>
          <%= link_to "Edit Island", edit_island_path, class: 'btn btn-blue btn-sm mr-2' %>
          <%= link_to "Delete Island", island_path(@island), 
            method: :delete, data: { confirm: 'Are you sure?' }, 
            class: 'btn btn-blue btn-sm' %>
        <% end %>
      </div>

    </div>


        <div class="card-trip">
          <%= cl_image_tag @island.photo.key, height: 300, crop: :fill %>
            <div class="card-trip-infos">
              <div>
                <h2> <%= @island.name %></h2>
                <p> <%= @island.description %></p>
              </div>
          <h2 class="card-trip-pricing"> $<%= @island.price %> </h2>
          <%= image_tag "user.svg", class:"card-trip-user avatar-bordered bg-color" %>
          </div>
            <div class="book d-flex">
                <%= link_to "Book Now",  new_island_booking_path(@island), class: 'btn btn-cta2 text-white btn-md w-100 mr-2' %>
                <%= link_to "Cancel",  islands_path, class: 'btn btn-outline-danger btn-md w-100' %>
            </div>
        </div>
    </div>
  </div>
</div>