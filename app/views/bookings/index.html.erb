<div class="container mt-2">
  <h1> All Bookings <h1>

  <% @bookings.each do |booking| %>
  <div class="container mt-4">
    <div class="card-product-show">
      <%= cl_image_tag booking.island.photo.key, height: 300, crop: :fill %>
      <div class="card-product-show-infos">
        <h2><%= booking.island.name%></h2>
        <p><strong>Total price: </strong> $ <%= ((booking.end_date - booking.start_date).to_i)*booking.island.price %><p>
        <p><strong>Check in:  <%= booking.start_date %></strong></p>
        <p><strong>Check out: <%= booking.end_date %></strong></p>
      </div>
    </div>
    </div>
  <%end%>
</div>
