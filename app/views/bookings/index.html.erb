<div class="card-product-container">
  <h1> All Bookings <h1>

  <% @bookings.each do |booking| %>
    <div class="card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos">
        <h2><%= booking.island.name%></h2>
        <%# <p><strong>Total price: </strong> $ <%= ((booking.end_date - booking.start_date).to_i)*booking.island.price<p> %>
        <p><strong>Check in:  <%= booking.start_date %></strong></p>
        <p><strong>Check out: <%= booking.end_date %></strong></p>
      </div>
    </div>
  <%end%>
</div>
