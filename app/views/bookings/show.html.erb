<div class="container mt-4">
<h3><%= @island.name %></h3>

<div class="card-product-show">
  <img src="" />
    <div class="card-product-show-infos">
        <p><strong>Price per day: </strong> $<%= @island.price %></p>
        <p><strong>Check in: </strong> <%= @booking.start_date.to_s %></p>
        <p><strong>Check out: </strong> <%= @booking.end_date.to_s %></p>
        <p><strong>Total price: </strong> $<%= ((@booking.end_date - @booking.start_date).to_i)*@island.price %> </p>
        <p><strong>Island description: </strong><%= @island.description %></p>
    </div>
</div>

<div class="d-flex mt-4">
  <%= link_to "back", islands_path, class: 'btn btn-primary mr-2' %>
  <%= link_to "see all your bookings", island_bookings_path, class: 'btn btn-primary' %>
</div>
</div>
