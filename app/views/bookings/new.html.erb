<div class='container py-5 '>
 <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-sm-6">
      <p> <%= current_user.name %></p>
      <%= simple_form_for [@island, @booking] do |f| %>
       <h1 class="mb-4">Book <%= @island.name %> Island</h1>
        <div class="card py-3 bg-color grey rounded-10">
        <div class="card-body">
          <%= f.input :start_date, as: :date, html5: true %>
          <%= f.input :end_date, as: :date, html5: true %>
          <%= f.submit 'Book', class: "btn btn-default btn-primary btn-md m-1" %>
          <%= link_to "Cancel", islands_path, class: 'btn btn-primary btn-md' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
