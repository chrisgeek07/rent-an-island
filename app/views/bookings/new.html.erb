<h1>Book an island<h1>
<%= simple_form_for [@island, @booking] do |f| %>
  <%= f.input :name, :label => 'Name:', :placeholder => 'Enter your name' %>
  <%= f.input :email, :label => 'Email:', :placeholder => 'user@domain.com'%>
  <%= f.input :start_date, as: :date, html5: true %>
  <%= f.submit 'Book', class: "btn btn-default btn-primary" %>
<% end %>
<%= link_to "back", island_booking_path(@island), class: 'btn btn-primary' %>
